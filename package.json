{
  "name": "@alchemy-js/alchemy",
  "version": "1.1.1",
  "description": "A dependency-light static site generator",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "static",
    "site",
    "generator"
  ],
  "author": "John Foderaro",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1"
  },
  "dependencies": {
    "gray-matter": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/test/fixture"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alchemy-js/alchemy.git"
  },
  "bugs": {
    "url": "https://github.com/alchemy-js/alchemy/issues"
  },
  "homepage": "https://github.com/alchemy-js/alchemy#readme"
}
